{
  "manifest_version": 2,

  "name": "Jargon Web API",
  "description": "Control the web via text commands",
  "version": "1.0",

  "browser_action": {
    "default_icon": "popup/plugin_ready.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/*"
  ],

  //files inserted automatically on page load
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.2.0.min.js", "editor/editor.js"]
    }
  ],

  "background": {
    "scripts": ["jquery-2.2.0.min.js","backgroundPage.js"]
  },
  
  //"options_page": "options.html"

  "options_ui": {
    // Required.
    "page": "options/options.html",
    // Recommended.
    "chrome_style": true
    // Not recommended; only provided for backwards compatibility,
    // and will be unsupported in a future version of Chrome (TBD).
    //"open_in_tab": true
  }
}
