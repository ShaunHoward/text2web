{
  "manifest_version": 2,

  "name": "Jargon Web API",
  "description": "Control the web via text commands",
  "version": "1.0",

  "browser_action": {
    "default_icon": "popup/icon.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://localhost/*"
  ],

  //files inserted automatically on page load
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery-2.2.0.min.js", "editor/editor.js"]
    }
  ],

  "background": {
    "scripts": ["backgroundPage.js"]
  }
}
