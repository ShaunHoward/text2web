{
  "manifest_version": 2,

  "name": "Jargon Web API",
  "description": "Control the web via text commands",
  "version": "1.0",

  "browser_action": {
    "default_icon": "popup/icon.png",
    "default_popup": "popup/popup.html"
  },

  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],

  //files inserted automatically on page load
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["onPageLoad/always.css"],
      "js": ["jquery-2.2.0.min.js", "onPageLoad/always.js", "editor.js"]
    }
  ],

  //script to edit page contents
  "web_accessible_resources": ["injector.js"]
}
